{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["dom", "dom.iterable", "esnext", "esnext.asynciterable"],
    "target": "es2018",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@server/*": ["server/*"],
      "@models/*": ["server/db/models/*"],
      "@models": ["server/db/models/index.ts"],
      "@schema": ["server/graphql/schema/index.ts"],
      "@graphql/server/*": ["server/graphql/*"],
      "@graphql/client/*": ["graphql/*"],
      "@gql/hooks/*": ["graphql/queries/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
